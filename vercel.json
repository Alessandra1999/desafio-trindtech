{
    "version": 2,
    "builds": [
        {
            "src": "./backend/api/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "./frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/api/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "frontend/$1"
        }
    ]
}